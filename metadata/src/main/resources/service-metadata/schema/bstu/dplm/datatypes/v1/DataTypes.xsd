<?xml version="1.0" encoding="UTF-8"?>
<xs:schema attributeFormDefault="unqualified"
    elementFormDefault="unqualified" jaxb:version="2.0"
    targetNamespace="http://edu/schema/bstu/dplm/datatypes/v1"
    xmlns:DT="http://edu/schema/bstu/dplm/datatypes/v1"
    xmlns:jaxb="http://java.sun.com/xml/ns/jaxb" xmlns:xs="http://www.w3.org/2001/XMLSchema">

	<xs:attributeGroup name="EventAttributeGroup">
		<xs:attribute name="eventType" type="xs:string" use="required"/>
		<xs:attribute name="eventSource" type="xs:string" use="required"/>
		<xs:attribute name="eventSessionId" use="optional" type="xs:string"/>
		<xs:attribute name="eventTimestamp" use="required" type="xs:dateTime"/>
	</xs:attributeGroup>
	<xs:attributeGroup name="IdentificationAttributeGroup">
		<xs:attribute name="idSource" type="DT:IdSource" use="required"/>
		<xs:attribute name="idValue" type="xs:string" use="required"/>
	</xs:attributeGroup>
	<xs:simpleType name="IdSource">
		<xs:restriction base="xs:string">
			<xs:enumeration value="PCR"/>
			<xs:enumeration value="EID"/>
			<xs:enumeration value="EMAIL"/>
		</xs:restriction>
	</xs:simpleType>
	<xs:complexType name="Identification">
		<xs:attributeGroup ref="DT:IdentificationAttributeGroup"/>
	</xs:complexType>
	<xs:complexType name="Event">
		<xs:sequence>
			<xs:element name="eventContents" type="xs:string" minOccurs="1" maxOccurs="1"/>
			<xs:element name="identification" type="DT:Identification" maxOccurs="unbounded" minOccurs="0"/>
		</xs:sequence>
		<xs:attributeGroup ref="DT:EventAttributeGroup"/>
	</xs:complexType>
	<xs:complexType name="Search">
		<xs:sequence>
			<xs:element name="maxResults" type="xs:int" minOccurs="0" maxOccurs="1"/>
			<xs:element name="identification" type="DT:Identification" minOccurs="1" maxOccurs="1"/>
			<xs:element name="lastSessionOnly" type="xs:boolean" minOccurs="0" maxOccurs="1"/>
			<xs:element name="fromTimestamp" type="xs:dateTime" minOccurs="0" maxOccurs="1"/>
		</xs:sequence>
	</xs:complexType>

    <xs:complexType name="LookType">
        <xs:sequence>
            <xs:element name="id" type="xs:long"/>
            <xs:element name="comment" type="xs:string" minOccurs="0" maxOccurs="1"/>
            <xs:element name="looklike" type="xs:string"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="UserPriviligesType">
        <xs:sequence>
            <xs:element name="id" type="xs:long"/>
            <xs:element name="name" type="xs:string"/>
            <xs:element name="comment" type="xs:string"  minOccurs="0" maxOccurs="1"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="UserType">
        <xs:sequence>
            <xs:element name="id" type="xs:long" minOccurs="0"/>
            <xs:element name="login" type="DT:UserLoginType"/>
            <xs:element name="password" type="DT:UserPasswordType"/>
            <xs:element name="registration" type="xs:dateTime"/>
            <xs:element name="lastSession" type="xs:dateTime"/>
            <xs:element name="hairLook" type="DT:LookType"/>
            <xs:element name="eyeLook" type="DT:LookType"/>
            <xs:element name="bodyLook" type="DT:LookType"/>
            <xs:element ref="DT:priviliges" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="UserResultsType">
        <xs:sequence>
            <xs:element name="id" type="xs:long" minOccurs="0"/>
            <xs:element name="isRight" type="xs:boolean"/>
            <xs:element name="answerText" type="xs:string"/>
            <xs:element name="sessionId" type="xs:string"/>
            <xs:element name="quiz" type="DT:QuizType"/>
            <xs:element name="question" type="DT:QuestionType"/>
            <xs:element name="answer" type="DT:AnswerType"/>
            <xs:element name="location" type="DT:LocationType"/>
            <xs:element name="userId" type="xs:long" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="MapObjectType">
        <xs:sequence>
            <xs:element name="id" type="xs:long" minOccurs="0"/>
            <xs:element name="name" type="xs:string"/>
            <xs:element name="comment" type="xs:string" minOccurs="0"/>
            <xs:element name="view" type="xs:string"/>
            <xs:element name="function" type="DT:FunctionType" maxOccurs="1" minOccurs="0"/>
            <xs:element name="quiz" type="DT:QuizType" minOccurs="0" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="AnswerType">
        <xs:sequence>
            <xs:element name="id" type="xs:long" minOccurs="0"/>
            <xs:element name="text" type="xs:string"/>
            <xs:element name="isAnswer" type="xs:boolean"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="QuestionType">
        <xs:sequence>
            <xs:element name="id" type="xs:long" minOccurs="0"/>
            <xs:element name="text" type="xs:string"/>
            <xs:element name="answers" type="DT:AnswerType" maxOccurs="unbounded" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="QuizType">
        <xs:sequence>
            <xs:element name="id" type="xs:long" minOccurs="0"/>
            <xs:element name="name" type="xs:string"/>
            <xs:element name="questions" type="DT:QuestionType" maxOccurs="unbounded" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="FunctionType">
        <xs:sequence>
            <xs:element name="id" type="xs:long" minOccurs="0"/>
            <xs:element name="function" type="xs:string"/>
            <xs:element name="comment" type="xs:string" minOccurs="0" maxOccurs="1"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="LocationType">
        <xs:sequence>
            <xs:element name="id" type="xs:long" minOccurs="0"/>
            <xs:element name="name" type="xs:string"/>
            <xs:element name="comment" type="xs:string" minOccurs="0" maxOccurs="1"/>
            <xs:element name="picture" type="xs:string"/>
            <xs:element name="created" type="xs:dateTime"/>
            <xs:element name="properties" type="DT:LocationPropertiesType" maxOccurs="unbounded" minOccurs="0"/>
            <xs:element name="idCreator" type="xs:long"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="LocationPropertiesType">
        <xs:sequence>
            <xs:element name="id" type="xs:long" minOccurs="0"/>
            <xs:element name="x" type="xs:string"/>
            <xs:element name="y" type="xs:string"/>
            <xs:element name="mapObject" type="DT:MapObjectType"/>
        </xs:sequence>
    </xs:complexType>

    <xs:element name="priviliges" type="DT:UserPriviligesType" />

    <xs:simpleType name="UserLoginType">
        <xs:restriction base="xs:string">
            <xs:maxLength value="50"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="UserPasswordType">
        <xs:restriction base="xs:string">
            <xs:maxLength value="50"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="UserLastSessionTimeType">
        <xs:restriction base="xs:dateTime">
            <xs:maxLength value="50"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="UserRegisterTimeType">
        <xs:restriction base="xs:dateTime">
            <xs:maxLength value="50"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:complexType name="AuthorizeParametersType">
        <xs:sequence>
            <xs:element name="login" type="DT:UserLoginType"/>
            <xs:element name="password" type="DT:UserPasswordType"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="SearchUserParametersType">
        <xs:choice>
            <xs:element name="login" type="DT:UserLoginType"/>
            <xs:element name="registration"  type="xs:dateTime"/>
            <xs:element name="lastSession" type="xs:dateTime"/>
            <xs:element ref="DT:priviliges"/>
        </xs:choice>
    </xs:complexType>

    <xs:complexType name="MarkType">
        <xs:sequence>
            <xs:element name="id" type="xs:long" minOccurs="0"/>
            <xs:element name="quiztId" type="xs:long"/>
            <xs:element name="teacherLogin" type="xs:string"/>
            <xs:element name="mark" type="xs:long" minOccurs="0"/>
            <xs:element name="percent" type="xs:long" minOccurs="0"/>
            <xs:element name="pupilLogin" type="xs:string"/>
        </xs:sequence>
    </xs:complexType>
</xs:schema>
